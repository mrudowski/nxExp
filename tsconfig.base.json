{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020", // was "es2015",
    "module": "esnext",
    "lib": ["es2023", "dom"], // was ES2020 - changed because of findLast
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-exp/common": ["libs/common/src/index.ts"],
      "@nx-exp/sw-base-tools": ["libs/sw-base-tools/src/index.ts"]
    },
    "allowImportingTsExtensions": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
